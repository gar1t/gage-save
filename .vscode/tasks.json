{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "problemMatcher": {
    "owner": "vistaml",
    "fileLocation": "absolute",
    "pattern": [
      {
        "regexp": "^File \"(.*)\", line (\\d+)",
        "file": 1,
        "line": 2
      },
      { "regexp": "^(Failed example):$", "message": 1 },
    ]
  },
  "presentation": {
    "revealProblems": "onProblem",
    "showReuseMessage": false,
    "clear": true,
    "focus": false
  },
  "tasks": [
    {
      "label": "Run All Tests",
      "type": "shell",
      "command": "vml",
      "args": ["check", "-T"]
    },
    {
      "label": "Run Current Test",
      "type": "shell",
      "command": "vml",
      "args": ["check", "-t", "${file}"]
    }
  ]
}
