{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://gageml.org/gagefile",
  "title": "Gage ML Project File",
  "type": "object",
  "additionalProperties": false,
  "patternProperties": {
    ".+": {
      "type": "object",
      "title": "Operation definition",
      "additionalProperties": false,
      "properties": {
        "description": {
          "type": "string"
        },
        "default": {
          "type": "boolean"
        },
        "exec": {
          "title": "Exec spec",
          "oneOf": [
            {
              "type": "string",
              "title": "Shell command",
              "minLength": 1
            },
            {
              "type": "array",
              "title": "Command arguments",
              "item": {
                "title": "Command argument",
                "type": "string",
                "minLength": 1
              },
              "minItems": 1
            },
            {
              "type": "object",
              "title": "Full exec spec",
              "additionalProperties": false,
              "properties": {
                "copy-sourcecode": {
                  "oneOf": [
                    {
                      "type": "string",
                      "title": "Shell command",
                      "minLength": 1
                    },
                    {
                      "type": "array",
                      "title": "Command arguments",
                      "item": {
                        "title": "Command argument",
                        "type": "string",
                        "minLength": 1
                      },
                      "minItems": 1
                    }
                  ]
                },
                "copy-deps": {
                  "oneOf": [
                    {
                      "type": "string",
                      "title": "Shell command",
                      "minLength": 1
                    },
                    {
                      "type": "array",
                      "title": "Command arguments",
                      "item": {
                        "title": "Command argument",
                        "type": "string",
                        "minLength": 1
                      },
                      "minItems": 1
                    }
                  ]
                },
                "init-runtime": {
                  "oneOf": [
                    {
                      "type": "string",
                      "title": "Shell command",
                      "minLength": 1
                    },
                    {
                      "type": "array",
                      "title": "Command arguments",
                      "item": {
                        "title": "Command argument",
                        "type": "string",
                        "minLength": 1
                      },
                      "minItems": 1
                    }
                  ]
                },
                "run": {
                  "oneOf": [
                    {
                      "type": "string",
                      "title": "Shell command",
                      "minLength": 1
                    },
                    {
                      "type": "array",
                      "title": "Command arguments",
                      "item": {
                        "title": "Command argument",
                        "type": "string",
                        "minLength": 1
                      },
                      "minItems": 1
                    }
                  ]
                },
                "finalize-run": {
                  "oneOf": [
                    {
                      "type": "string",
                      "title": "Shell command",
                      "minLength": 1
                    },
                    {
                      "type": "array",
                      "title": "Command arguments",
                      "item": {
                        "title": "Command argument",
                        "type": "string",
                        "minLength": 1
                      },
                      "minItems": 1
                    }
                  ]
                }
              }
            }
          ]
        }
      }
    }
  }
}
