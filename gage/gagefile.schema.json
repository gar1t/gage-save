{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://gageml.org/gagefile",
  "title": "Gage ML Project File",

  "$defs": {
    "shell-cmd": {
      "type": "string",
      "title": "Shell command"
    },
    "cmd-args": {
      "type": "array",
      "title": "Command arguments",
      "items": {
        "title": "Command argument",
        "type": "string",
        "minLength": 1
      }
    },
    "exec-cmd": {
      "oneOf": [
        {
          "$ref": "#/$defs/shell-cmd"
        },
        {
          "$ref": "#/$defs/cmd-args"
        }
      ]
    },
    "path-pattern": {
      "type": "string",
      "title": "Path pattern",
      "minLength": 1
    },
    "path-patterns": {
      "oneOf": [
        {
          "$ref": "#/$defs/path-pattern"
        },
        {
          "type": "array",
          "items": {
            "$ref": "#/$defs/path-pattern"
          }
        }
      ]
    },
    "config": {
      "type": "object",
      "title": "Run configuration",
      "additionalProperties": false,
      "anyOf": [
        {"required": ["path"]},
        {"required": ["paths"]}
      ],
      "allOf": [
        {
          "not": {
            "required": ["path", "paths"]
          }
        }
      ],
      "properties": {
        "name": {
          "type": "string",
          "title": "Configuration name or name pattern"
        },
        "description": {
          "type": "string",
          "title": "Configuration description"
        },
        "path": {
          "$ref": "#/$defs/path-pattern",
          "title": "Configuration path",
          "minLength": 1
        },
        "paths": {
          "type": "array",
          "title": "Configuration paths",
          "items": {
            "$ref": "#/$defs/path-pattern"
          },
          "minLength": 1
        }
      }
    }
  },
  "type": "object",
  "additionalProperties": false,
  "patternProperties": {
    ".+": {
      "type": "object",
      "title": "Operation definition",
      "additionalProperties": false,
      "properties": {
        "description": {
          "type": "string"
        },
        "default": {
          "type": "boolean"
        },
        "exec": {
          "title": "Exec spec",
          "oneOf": [
            {
              "$ref": "#/$defs/shell-cmd"
            },
            {
              "$ref": "#/$defs/cmd-args"
            },
            {
              "type": "object",
              "title": "Full exec spec",
              "additionalProperties": false,
              "properties": {
                "copy-sourcecode": {
                  "$ref": "#/$defs/shell-cmd"
                },
                "copy-deps": {
                  "$ref": "#/$defs/shell-cmd"
                },
                "resolve-deps": {
                  "$ref": "#/$defs/shell-cmd"
                },
                "init-runtime": {
                  "$ref": "#/$defs/shell-cmd"
                },
                "run": {
                  "$ref": "#/$defs/shell-cmd"
                },
                "finalize-run": {
                  "$ref": "#/$defs/shell-cmd"
                }
              }
            }
          ]
        },
        "sourcecode": {
          "$ref": "#/$defs/path-patterns",
          "title": "Operation source code"
        },
        "config": {
          "title": "Operation configuration",
          "oneOf": [
            {
              "$ref": "#/$defs/path-patterns",
              "title": "Operation config paths"
            },
            {
              "$ref": "#/$defs/config"
            },
            {
              "type": "array",
              "items": {
                "$ref": "#/$defs/config"
              }
            }
          ]
        }
      }
    }
  }
}
