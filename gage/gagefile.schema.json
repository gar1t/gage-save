{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://gageml.org/gagefile",
  "title": "Gage ML Project File",

  "$defs": {
    "shell-cmd": {
      "type": "string",
      "title": "Shell command",
      "minLength": 1
    },
    "cmd-args": {
      "type": "array",
      "title": "Command arguments",
      "items": {
        "title": "Command argument",
        "type": "string",
        "minLength": 1
      },
      "minItems": 1
    },
    "exec-cmd": {
      "oneOf": [
        {
          "$ref": "#/$defs/shell-cmd"
        },
        {
          "$ref": "#/$defs/cmd-args"
        }
      ]
    },
    "path-pattern": {
      "type": "string",
      "title": "Path pattern",
      "minLength": 1
    },
    "path-patterns": {
      "oneOf": [
        {
          "$ref": "#/$defs/path-pattern"
        },
        {
          "type": "array",
          "items": {
            "$ref": "#/$defs/path-pattern"
          }
        }
      ]
    },
    "writeable": {
      "oneOf": [
        {
          "type": "boolean",
          "title": "Writeable flag"
        },
        {
          "type": "array",
          "title": "List of writeable paths",
          "items": {
            "type": "string"
          }
        }
      ]
    },
    "binding": {
      "type": "object",
      "title": "Configuration binding",
      "additionalProperties": false,
      "properties": {
        "target": {
          "type": "string",
          "title": "Binding target path"
        },
        "name": {
          "type": "string",
          "title": "Binding name"
        }
      },
      "required": ["target"]
    },
    "config": {
      "type": "object",
      "title": "Run configuration",
      "additionalProperties": false,
      "properties": {
        "path": {
          "type": "string",
          "title": "Path to configuration file"
        },
        "include": {
          "$ref": "#/$defs/path-patterns"
        },
        "exclude": {
          "$ref": "#/$defs/path-patterns"
        },
        "bind": {
          "oneOf": [
            {
              "$ref": "#/$defs/binding"
            },
            {
              "type": "array",
              "items": {
                "$ref": "#/$defs/binding"
              }
            }
          ]
        }
      }
    }
  },

  "type": "object",
  "additionalProperties": false,
  "patternProperties": {
    ".+": {
      "type": "object",
      "title": "Operation definition",
      "additionalProperties": false,
      "properties": {
        "description": {
          "type": "string"
        },
        "default": {
          "type": "boolean"
        },
        "exec": {
          "title": "Exec spec",
          "oneOf": [
            {
              "$ref": "#/$defs/shell-cmd"
            },
            {
              "$ref": "#/$defs/cmd-args"
            },
            {
              "type": "object",
              "title": "Full exec spec",
              "additionalProperties": false,
              "properties": {
                "copy-sourcecode": {
                  "$ref": "#/$defs/exec-cmd"
                },
                "copy-deps": {
                  "$ref": "#/$defs/exec-cmd"
                },
                "init-runtime": {
                  "$ref": "#/$defs/exec-cmd"
                },
                "run": {
                  "$ref": "#/$defs/exec-cmd"
                },
                "finalize-run": {
                  "$ref": "#/$defs/exec-cmd"
                }
              }
            }
          ]
        },
        "sourcecode": {
          "type": "object",
          "title": "Operation source code",
          "additionalProperties": false,
          "properties": {
            "include": {
              "$ref": "#/$defs/path-patterns"
            },
            "exclude": {
              "$ref": "#/$defs/path-patterns"
            }
          }
        },
        "config": {
          "title": "Operation configuration",
          "oneOf": [
            {
              "$ref": "#/$defs/config"
            },
            {
              "type": "array",
              "items": {
                "$ref": "#/$defs/config"
              }
            }
          ]
        }
      }
    }
  }
}
