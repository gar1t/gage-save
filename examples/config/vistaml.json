{
  "train": {
    "exec": "python train.py",
    "flags.bind": {
      "to": "train_config.py",
      "include": "*"
    }
  },

  "train-2": {
    "exec": "python train_config.py",
    "flags.bind": [
      {
        "to": "config1.json",
        "include": [
          // Map a variable name to a flag name
          { "loc": "x", "as": "x" }
        ]
      },
      {
        "to": "config2.json",
        "include": "noise"
      }
    ],
    "flags": {
      "x": {
        "description": "Main hyperparameter",
        "default": -0.5
      },
      "noise": {
        "description": "Generates a little noise",
        "default": 0.1
      }
    }
  }
}
